<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLineChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#fff"
            android:contentDescription="Track Your Weaight"
            android:drawableLeft="@drawable/weighing_machine"
            android:drawableRight="@drawable/next_24"
            android:drawablePadding="20dp"
            android:elevation="5dp"
            android:paddingLeft="10dp"
            android:stateListAnimator="@null"
            android:text="Weight Tracker"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBarChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#fff"
            android:contentDescription="Track Your Weaight"
            android:drawableLeft="@drawable/blood_pressure"
            android:drawableRight="@drawable/next_24"
            android:drawablePadding="20dp"
            android:elevation="5dp"
            android:paddingLeft="10dp"
            android:stateListAnimator="@null"
            android:text="BP Tracker"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPieChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#fff"
            android:contentDescription="Track Your Weaight"
            android:drawableLeft="@drawable/glucose_meter"
            android:drawableRight="@drawable/next_24"
            android:drawablePadding="20dp"
            android:elevation="5dp"
            android:paddingLeft="10dp"
            android:stateListAnimator="@null"
            android:text="Blood Glucose Tracker"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#000"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>